<script defer src='/js/oneReq.js'></script>
<br>
<br>
<div class='reqCont'>
  <div class="flex-cont">
    <div id='reqCard' class="flex-elem">
        <span class="card-title">Контактные данные</span>
        <p>{{request.name}}</p>
        <p>{{request.companyName}}</p>
        <p>{{request.phone}}</p>
        <p>{{request.email}}</p>
        <p>{{request.description}}</p>
        <div><img src='{{request.img}}' alt="Здесь должна быть картинка"></div>
        <p>{{request.adminComment}}</p>
        <p>{{request.status}}</p>
        <a href='#adminCom'><button class='editBtn'>Сменить статус</button></a>
    </div>
  </div>

  <div class="row editHidden" >
    <form class="col s8 offset-s8 editForm" name="editRequest" action="/admin/requests/{{id}}"  method="POST" id={{request._id}}>

      <div class="cont">

        <div class="login-container">
          {{#if message}}
          <h1 class='erorMessage'>{{message}}</h1>
          {{/if}}
         <form method='post' action='/admin/requests/{{request._id}}' name='editForm' id='editForm'>
          <input type="text" class="validate" name="adminComment" id='adminCom'>
          <label for="adminComment">Комментарий</label>
          <br>
          <br>
          <select id="select" name="selectName">
            <option value="" disabled selected>Статус заявки</option>
            <option value="Открыта">Открыта</option>
            <option value="В работе">В работе</option>
            <option value="Отменена">Отменена</option>
            <option value="Выполнена">Выполнена</option>
          </select>
        <button class="editFormBtn" id={{request._id}} >Выполнить!</button>
        </form>
        </div>
      </div>


    </form>
  </div>
</div>

